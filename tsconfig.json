{
    "compilerOptions": {
        "allowJs": true,
        "lib": ["ES2018", "DOM", "ES7"],
        "module": "commonjs",
        "moduleResolution": "Node",
        "outDir": "./built",
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "ES2020"
    },
    "include": [
        "./Discord-Bot-Core/**/*",
        "./handlers/**/*",
        "./modules/**/*",
        "./src/**/*",
        "./**/*.json"
    ]
}